<div class="card mx-auto" style="width: 18rem;">
  <div class="card-body">
    <%= form_for @signup do |f| %>

    <div class="form-group">
      <%= f.label :Nombre%>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :Apellido%>
      <%= f.text_field :surname %>
    </div>
    <div class="form-group">
      <%= f.label :Edad%>
      <%= f.text_field :age %>
    </div>
    <div class="btn">
      <%= f.submit %>
    </div>
    <% end %>
  </div>
</div>
